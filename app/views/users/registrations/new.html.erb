<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "users_backoffice" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "users_backoffice" %>

<div>
  <a class="hiddenanchor" id="signup"></a>
  <a class="hiddenanchor" id="signin"></a>
  
  <% if resource.errors.any? %>
    <% resource.errors.full_messages.each do |message| %>
      <script>$.notify("<%= message %>", "danger");</script>
    <% end %>
  <% end %>
    

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Form de registo</h1>
          <% if flash %>
            <% flash.each do |key, value| %>
          <div class="alert alert-danger alert-dismissable">
              <ul>
            <div class="flash <%= key %>"><%= value %></div>
              </ul>
          </div>
            <% end %>
          <% end %>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"text", class:"form-control", placeholder:"Username" %>
          </div>
          <div>
            <%= f.password_field :password, autocomplete: "current-password", type:"password", class:"form-control", placeholder:"Password" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "current-password", type:"password", class:"form-control", placeholder:"Confirmar Password" %>
          </div>
          <div>
            <%= f.submit "Registar", class:"btn btn-default submit" %>
            </div>

          <div class="clearfix"></div>

          <div class="separator">

            <div class="clearfix"></div>
            <br />

            <div>
              <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
              <p>Â©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>



