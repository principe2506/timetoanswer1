<div>
  <a class="hiddenanchor" id="signup"></a>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <h1>Reset form</h1>
          <% if flash %>
            <% flash.each do |key, value| %>
          <div class="alert alert-danger alert-dismissable">
              <ul>
            <div class="flash <%= key %>"><%= value %></div>
              </ul>
          </div>
            <% end %>
          <% end %>
          <div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"text", class:"form-control", placeholder:"Username" %>
          </div>
          <div>
            <%= f.submit "Envie a requisição para mim", class:"btn btn-default submit" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator">
            <p class="change_link">Novo no site?
            <%= link_to "Criar conta", new_registration_path(resource_name), class:"to_register" %><br />
            </p>

            <div class="clearfix"></div>
            <br />

            <div>
              <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
              <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>