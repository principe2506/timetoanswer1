<h1>Listando Administradores</h1>

<div class="container">
<table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>
                <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            </th>
        </tr>
    </thead>
    <tbody>
        <% @admins.each do |admin| %>
        <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td>
            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja realmente exclui????"} do %>
                <i class="fa fa-minus"></i>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="text-center">
<%= paginate @admins %>
</div>
</div>