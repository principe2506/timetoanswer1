<h1>Listando Assuntos/Áreas</h1>

<div class="container">
<table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>#</th>
            <th>Descrição</th>
            <th>
                <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            </th>
        </tr>
    </thead>
    <tbody>
        <% @subject.each do |subject| %>
        <tr>
            <td><%= subject.id %></td>
            <td><%= subject.description %></td>
            <td>
            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir este assunto/área????"} do %>
                <i class="fa fa-minus"></i>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="text-center">
<%= paginate @subject %>
</div>
</div>